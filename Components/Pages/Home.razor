@page "/"
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<div class="d-flex">
    @foreach (Note note in notes)
    { 
        <Card Title="@note.Title" Text="@note.Text" IsFeatured="@note.IsFeatured" >
            <button class="btn btn-primary">Button for @note.Title</button>
        </Card>
    }
</div>

@code {
    private class Note(string title, string text, bool isFeatured)
    {
        public string Title {get; set;} = title;
        public string Text {get; set;} = text;

        public bool IsFeatured {get; set;} = isFeatured;
    }

    List<Note> notes = [
        new Note("Note 1", "This is note 1 just note 1", false),
        new Note("Note 2", "This is note 2 not note 1", true),
        new Note("Note 3", "This is note 3 not note 2", true)
        ];
}